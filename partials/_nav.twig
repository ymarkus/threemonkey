{% macro display_submenu(item) %}
<li class="md:relative" @click.away="open = false" x-data="{ open: false }">
  <button @click="open = !open" class="flex flex-row items-center w-full px-2 md:px-4 py-1 md:py-2 mt-2 md:mt-0 lg:ml-4 font-semibold text-left bg-transparent rounded-lg md:w-auto md:inline
                                          hover:text-gray-800 hover:bg-gray-200"
                                :class="open && 'bg-gray-200 text-gray-800'">
    <span>{{ item.label|default(item.title) }}</span>
    <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-180': open, 'rotate-0': !open}" class="inline w-4 h-4 ml-1 transition-transform duration-200 transform">
      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
    </svg>
  </button>
  <ul x-show="open" x-transition:enter="transition"
      x-transition:enter-start="transform opacity-0 scale-95"
      x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75"
      x-transition:leave-start="transform opacity-100 scale-100"
      x-transition:leave-end="transform opacity-0 scale-95"
      class="md:absolute right-0 w-full origin-top-right rounded-md md:shadow-lg md:w-48">
    <li class="px-2 py-2 bg-white rounded-md text-gray-800">
      {% for item in item.submenu %}
        <a href="{{ item.uri }}" class="block px-4 py-2 text-sm font-semibold bg-transparent rounded-lg hover:text-gray-800 focus:text-gray-800 hover:bg-gray-200
                                         focus:bg-gray-200 {% if item|current %}bg-gray-200 text-gray-800 font-bold{% endif %}">
          {{ item.label|default(item.title) }}
        </a>
      {% endfor %}
    </li>
  </ul>
</li>
{% endmacro %}

{% macro display_main(item) %}
<li>
  <a href="{{ item.uri }}" class="flex flex-row items-center w-full px-2 md:px-4 py-1 md:py-2 mt-2 md:mt-0 lg:ml-4 font-semibold text-left bg-transparent rounded-lg md:w-auto md:inline 
                                  hover:text-gray-800 hover:bg-gray-200 {% if item|current %}bg-gray-200 text-gray-800 font-bold{% endif %}">
    {{ item.label|default(item.title) }}
  </a>
</li>
{% endmacro %}

<nav class="w-full md:flex md:items-center md:w-auto mt-2 md:mt-0 md:bg-transparent p-4 md:p-0 md:pr-4 z-20"
     :class="[menuOpen || 'hidden', (!menuOpen && atTop) ? 'text-white' : 'text-gray-800']">
  <ul class="list-reset md:flex justify-end flex-1 items-center">
    {% for item in menu %}
      {% if not item.submenu %}
        {{ _self.display_main(item) }}
      {% else %}
        {{ _self.display_submenu(item) }}
      {% endif %}
    {% endfor %}
  </ul>
</nav>
