{# The name of the `content` is passed in from the index, i.e. "blocks/introduction" #}
{% setcontent block = (content) returnsingle %}
{# The name of `contenttype` is passed in from the index, i.e. "pages" #}
{% setcontent records = (contenttype) limit 2 %}

<!-- Introduction -->
<section class="bg-white border-b py-4 md:py-8">
  <div class="container max-w-5xl mx-auto my-4 md:my-8">
    {% include 'partials/_block_header.twig' %}

    {% for record in records %}
      <div class="flex flex-wrap pt-4 {% if loop.index is even %}flex-col-reverse sm:flex-row{% endif %}">

        {% if loop.index is even %}
          <div class="w-full sm:w-1/2 px-6 pb-6 sm:p-6">
            <img class="w-full object-cover object-center" src="{{ record|thumbnail(500, 300, fit="crop") }}" alt="{{ record|image.title }}">
          </div>
        {% endif %}

        <div class="w-5/6 sm:w-1/2 px-6 pb-6 sm:p-6">
          <h3 class="text-3xl text-gray-800 font-bold leading-none mb-3">{{ record|title }}</h3>
          <p class="text-gray-600">{{ record|excerpt(300) }}</p>
          <a href="{{ record|link() }}" class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0 md:mt-4 underline">
            {{ __('general.phrase.read-more') }}
          </a>
        </div>

        {% if loop.index is odd %}
          <div class="w-full sm:w-1/2 px-6 pb-6 sm:p-6">
            <img class="w-full object-cover object-center" src="{{ record|thumbnail(500, 300, fit="crop") }}" alt="{{ record|image.title }}">
          </div>
        {% endif %}

      </div>
    {% endfor %}

  </div>
</section> 
