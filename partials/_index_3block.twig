{# The name of `contenttype` is passed in from the index, i.e. "pages" #}
{% setcontent records = (contenttype) limit 3 %}

<!-- 3Block -->
<section class="bg-white border-b py-8">

  <div class="container mx-auto flex flex-wrap pt-4 pb-12">
    {% for record in records %}
      <div class="w-full md:w-1/3 p-6 flex flex-col flex-grow flex-shrink">
        <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow">
          <h4 class="w-full font-bold text-xl text-gray-800 mt-2 px-6">{{ record|title }}</h4>
          <p class="text-gray-800 text-base px-6 mb-5">
          {{ record|excerpt(300) }}
          </p>
        </div>
        <div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow p-6">
          <div class="flex items-center justify-center">
            <a href="{{ record.link }}" class="mx-auto lg:mx-0 gradient text-white font-bold rounded-full py-3 px-6 shadow-lg transform-gpu transition duration-150 ease-in-out hover:scale-105">
              {{ __('general.phrase.read-more') }}
            </a>
          </div>
        </div>
      </div>
    {% endfor %}

  </div>

</section>
