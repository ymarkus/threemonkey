{# The name of `contenttype` is passed in from the index, i.e. "pages" #}
{% setcontent records = (contenttype) limit 3 %}

<!-- 3Block -->
<section class="py-8 bg-white border-b">

  <div class="container flex flex-wrap pt-4 pb-12 mx-auto">
    {% for record in records %}
      <div class="flex flex-col flex-grow flex-shrink w-full p-6 md:w-1/3">
        <div class="flex-1 overflow-hidden bg-white rounded-t rounded-b-none shadow">
          <h4 class="w-full px-6 mt-2 text-xl font-bold text-gray-800">{{ record|title }}</h4>
          <p class="px-6 mb-5 text-base text-gray-800">
          {{ record|excerpt(300) }}
          </p>
        </div>
        <div class="flex-none p-6 mt-auto overflow-hidden bg-white rounded-t-none rounded-b shadow">
          <div class="flex items-center justify-center">
            <a href="{{ record.link }}" class="px-6 py-3 mx-auto font-bold text-white transition duration-150 ease-in-out rounded-full shadow-lg lg:mx-0 gradient transform-gpu hover:scale-105">
              {{ __('general.phrase.read-more') }}
            </a>
          </div>
        </div>
      </div>
    {% endfor %}

  </div>

</section>
