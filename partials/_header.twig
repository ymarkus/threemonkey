<!--header-->
<header
    id="header" class="fixed w-full z-30 top-0 text-white"
                x-data="{ menuOpen: false, atTop: true, scrollReact() { this.atTop = (window.pageYOffset > 10) ? false : true } }"
                x-init="scrollReact()" @scroll.window="scrollReact()"
                :class="(menuOpen || !atTop) ? 'text-gray-800 bg-white shadow' : 'text-white'">

  <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 py-2 max-w-screen-xl">

    <!-- Left side -->
    <div class="pl-4 flex items-center">
      <a href="{{ path('homepage') }}" class="flex flex-1 items-center no-underline hover:no-underline font-bold text-2xl lg:text-4xl"
                                       :class="(menuOpen || !atTop) ? 'text-gray-800' : 'text-white'">
        {% include 'img/logo.svg' %}
        {% if record|default and record.title %}
          <p class="hidden sm:block">{{ config.get('general/sitename') }}</p>
        {% endif %}
      </a>
    </div>

    <!-- Right side -->
    <div class="flex md:hidden pr-4">
      <button id="nav-toggle" @click="menuOpen = ! menuOpen" :class="menuOpen && 'open'">
        <span :class="(menuOpen || !atTop) ? 'gradient' : 'bg-white'"></span>
        <span :class="(menuOpen || !atTop) ? 'gradient' : 'bg-white'"></span>
        <span :class="(menuOpen || !atTop) ? 'gradient' : 'bg-white'"></span>
        <span :class="(menuOpen || !atTop) ? 'gradient' : 'bg-white'"></span>
      </button>
    </div>
    {{ menu('main', template='partials/_nav.twig') }}

  </div>
</header>
