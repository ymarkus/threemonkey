{# Configure the address and location of the map in `public/theme/base-2021/theme.yaml`. #}

{% set mapurl = 'https://maps.google.com/maps?q=' ~ (config.get('theme/location/map_query', 'Two Kings, The Hague')|url_encode) %}

{% include 'partials/_divider_reverse.twig' %}

<!-- Contact with form and map -->
<section class="text-gray-700 border-b gradient">
  <div class="container flex flex-wrap px-5 py-12 mx-auto sm:flex-no-wrap">
    <div class="relative flex items-start justify-start w-11/12 p-2 mx-auto overflow-hidden bg-gray-300 rounded-lg min-h-screen-9/10 md:min-h-screen-1/2">
      <iframe width="100%" height="100%" class="absolute inset-0" frameborder="0" title="map" marginheight="0"
        marginwidth="0" scrolling="no"
        src="{{ mapurl }}&width=100%&ie=UTF8&t=&z=14&output=embed"
        style="filter: grayscale(0.5) contrast(1) opacity(0.8);"></iframe>
      <div class="relative flex flex-col min-w-full py-2 text-center bg-white rounded-md md:py-6 md:min-w-3/10 sm:flex-row md:flex-col">
        <div class="flex-1 px-6">
          <h2 class="text-sm font-bold tracking-widest text-gray-900 title-font">{{ __('general.phrase.address')|upper }}</h2>
          <p class="leading-snug sm:leading-relaxed">
            <a class="text-indigo-500" href="{{ mapurl }}">
              {{ config.get('theme/location/address')|nl2br }}
            </a>
          </p>
        </div>
        <div class="flex-1 px-6 mt-2 sm:mt-0 md:mt-4">
          <h2 class="text-sm font-bold tracking-widest text-gray-900 title-font">{{ __('general.phrase.email')|upper }}</h2>
          <p class="leading-snug sm:leading-relaxed">
            <a class="text-indigo-500" href="mailto:{{ config.get('theme/location/email') }}">
              {{ config.get('theme/location/email') }}
            </a>
          </p>
          <h2 class="mt-2 text-sm font-bold tracking-widest text-gray-900 md:mt-4 title-font">{{ __('general.phrase.phone')|upper }}</h2>
          <p class="leading-snug sm:leading-relaxed">
            <a href="tel:{{ config.get('theme/location/phone') }}" class="text-indigo-500">
              {{ config.get('theme/location/phone') }}
            </a>
          </p>
        </div>
      </div>
    </div>

    {#<div class="flex flex-col w-full mt-8 bg-gray-100 lg:w-1/3 md:w-1/2 md:ml-auto md:py-8 md:mt-0">
      <h2 class="mb-1 text-lg font-medium text-gray-900 title-font">Feedback</h2>
      {% if extension_exists('bolt/forms') %}
        {% include 'partials/_contact_form_extension.twig' %}
      {% else %}
        {% include 'partials/_contact_form_static.twig' %}
      {% endif %}
    </div>#}
  </div>
</section>
